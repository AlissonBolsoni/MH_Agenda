<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.FormularioActivity">

    <ImageView
        android:id="@+id/formulario_imagem"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:cropToPadding="true"
        android:src="@drawable/ic_action_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/formulario_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/formulario_imagem"
        app:layout_constraintStart_toStartOf="@+id/formulario_imagem"
        app:layout_constraintTop_toBottomOf="@+id/formulario_imagem" />

    <EditText
        android:id="@+id/formulario_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/formulario_nome"
        app:layout_constraintStart_toStartOf="@+id/formulario_nome"
        app:layout_constraintTop_toBottomOf="@+id/formulario_nome" />

    <EditText
        android:id="@+id/formulario_telefone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="(99) 99999-9999"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/formulario_email"
        app:layout_constraintStart_toStartOf="@+id/formulario_email"
        app:layout_constraintTop_toBottomOf="@+id/formulario_email" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/formulario_fab_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/formulario_imagem"
        app:layout_constraintEnd_toEndOf="@+id/formulario_imagem"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/formulario_imagem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_action_camera"
        android:focusable="true" />
</android.support.constraint.ConstraintLayout>